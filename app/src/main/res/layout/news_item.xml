<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/NewsItem">

    <TextView
        android:id="@+id/sectionName"
        tools:text="@string/placeholder_section"
        style="@style/NewsSectionName" />

    <TextView
        android:id="@+id/newsHeadline"
        tools:text="@string/placeholder_headline"
        style="@style/NewsHeadline" />

    <ImageView
        android:id="@+id/newsThumbnail"
        android:contentDescription="@string/cd_news_thumb"
        android:src="@drawable/placeholder"
        style="@style/NewsThumbnail" />

    <LinearLayout
        android:id="@+id/newsButtons"
        style="@style/NewsBottomContainer">

        <ImageButton
            android:id="@+id/bookmarkBtn"
            android:contentDescription="@string/cd_bookmark_btn"
            app:srcCompat="@drawable/btn_bookmark"
            style="@style/NewsButton" />

        <ImageButton
            android:id="@+id/shareBtn"
            android:contentDescription="@string/cd_share_btn"
            app:srcCompat="@drawable/btn_share"
            style="@style/NewsButton" />

        <TextView
            android:id="@+id/authorAndDate"
            tools:text="@string/placeholder_author_date"
            style="@style/NewsAuthorAndDate" />

    </LinearLayout>


</RelativeLayout>